# Server Configuration
PORT=5000

# Database Connection
# Option 1: Local MongoDB (Default)
MONGODB_URI=mongodb://localhost:27017/pva-markets
# Option 2: MongoDB Atlas (Production) - Uncomment and replace to use
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/pva-markets

# Security
# Random string for signing JWT tokens
JWT_SECRET=development_secret_key_change_in_production

# AI Chatbot (OpenRouter)
# Get key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxx

# Notifications (Telegram)
# 1. Create bot via @BotFather to get Token
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# 2. Get Chat ID via https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates after sending a message to bot
TELEGRAM_CHAT_ID=123456789

# Admin Dashboard Access
ADMIN_PASSWORD=admin123